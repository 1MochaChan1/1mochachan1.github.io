---
import Layout from "../layouts/Layout.astro";
import GameCard from "../components/GameCard.astro";
import { getCollection } from "astro:content";

const games = await getCollection("games");
---

<Layout>
  <div class="page-container">
    <!-- ...existing code... -->
    
    <!-- Arcade Title -->
    <header class="title-section">
      <h1 class="arcade-title">
        NIGHTMARE<br/>ARCADE
      </h1>
    </header>

    <!-- Game Cards Grid -->
    <section class="games-section">
      {games.length > 0 ? (
        <div class="games-grid">
          {games.map((game, index) => {
            const neonColors: ("pink" | "blue" | "white")[] = ["pink", "white", "blue"];
            return <GameCard game={game} neonColor={neonColors[index % 3]} />;
          })}
        </div>
      ) : (
        <div class="no-games">
          <p class="font-pixel neon-pink">NO GAMES YET...</p>
        </div>
      )}
    </section>

    <!-- Bottom Navigation -->
    <footer class="nav-section">
      <nav class="nav-links">
        <a href="/about" class="nav-link">ABOUT</a>
        <a href="/games" class="nav-link">GAMES</a>
        <a href="/contact" class="nav-link">CONTACT</a>
      </nav>
      <a href="/games" class="play-button">PLAY NOW</a>
    </footer>
  </div>
</Layout>

<style>
  /* ...existing code... */

  .page-container {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    width: 100%;
    padding: 0;
    box-sizing: border-box;
  }

  /* Title Section */
  .title-section {
    text-align: center;
  }

  .arcade-title {
    font-family: 'Press Start 2P', monospace;
    font-size: clamp(1rem, 4vw, 1.75rem);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    line-height: 1.4;
    color: #ff2a6d;
    text-shadow: 
      0 0 5px #ff2a6d,
      0 0 10px #ff2a6d,
      0 0 20px #ff2a6d,
      0 0 40px #ff2a6d;
  }

  /* Games Section */
  .games-section {
    width: 100%;
  }

  .games-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1rem;
    width: 100%;
    max-width: 100%;
  }

  .no-games {
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1rem;
  }

  /* Nav Section */
  .nav-section {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 0.5rem;
    width: 100%;
  }

  .nav-links {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .nav-link {
    font-family: 'Press Start 2P', monospace;
    font-size: clamp(0.4rem, 1.2vw, 0.6rem);
    text-transform: uppercase;
    color: white;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .nav-link:hover {
    color: #05d9e8;
    text-shadow: 
      0 0 5px #05d9e8,
      0 0 10px #05d9e8;
  }

  .play-button {
    font-family: 'Press Start 2P', monospace;
    font-size: clamp(0.4rem, 1.2vw, 0.55rem);
    text-transform: uppercase;
    color: #ff2a6d;
    text-decoration: none;
    padding: 0.5rem 0.75rem;
    border: 2px solid #ff2a6d;
    border-radius: 4px;
    background: transparent;
    transition: all 0.3s ease;
    box-shadow: 
      0 0 5px rgba(255, 42, 109, 0.3),
      inset 0 0 5px rgba(255, 42, 109, 0.1);
  }

  .play-button:hover {
    background: rgba(255, 42, 109, 0.15);
    box-shadow: 
      0 0 10px rgba(255, 42, 109, 0.5),
      0 0 20px rgba(255, 42, 109, 0.3),
      inset 0 0 10px rgba(255, 42, 109, 0.2);
  }

  /* Responsive - Stack cards on small screens */
  @media (max-width: 600px) {
    .games-grid {
      grid-template-columns: 1fr;
      gap: 0.5rem;
    }

    .nav-section {
      flex-direction: column;
      gap: 0.5rem;
    }

    .nav-links {
      gap: 0.5rem;
    }

    .arcade-title {
      font-size: clamp(0.8rem, 5vw, 1.2rem);
    }
  }

  /* Medium screens - 2 columns */
  @media (min-width: 601px) and (max-width: 900px) {
    .games-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>
